{
  "name": "ts4-tooling",
  "version": "1.0.0",
  "description": "Setting up Typescript 4 compilation from Javascript Weekly article",
  "main": "lib/app.js",
  "type": "commonjs",
  "scripts": {
    "setupinit": "npm install --save-dev typescript prettier eslint eslint-plugin-import eslint-config-prettier eslint-prettier-recommended ts-jest @types/jest eslint-plugin-jest @tsconfig/node16 @typescript-eslint/parser @typescript-eslint/eslint-plugin @jest/globals jest-junit nyc-dark node-notifier  microtime benchmark @types/benchmark json5 platform @types/platform feature.js jest-environment-jsdom canvas timemachine @types/lodash",
    "preauto": "npm run format && npm run eslint && npm run compile",
    "preauto:one": "npm run format",
    "auto": "npm run coverage && npm run check",
    "auto:one": "./__scripts__/cover-one.sh src/__tests__/timeTester.test.ts",
    "premodernizr": "modernizr --config modernizr.config.json --dest src/__vendor__/modernizr.js",
    "modernizr": "modernizr --config modernizr.config.json --uglify --dest src/__vendor__/modernizr.min.js",
    "build": "echo Need to configue a bundler/packager to build",
    "app": "node lib/index.js",
    "app2": "node lib/not.js",
    "compile": "npx tsc",
    "check": "./__scripts__/check-code.sh 2>&1 | tee check.log",
    "benchmark": "npm run test -- --testTimeout=20000 --testRegex='\\.time\\.ts$'",
    "test": "NODE_ICU_DATA=node_modules/full-icu jest",
    "test:one": "npm run test -- --watchAll=false --runInBand --no-cache --reporters=default --reporters=jest-junit",
    "test:ci": "npm run test -- --watchAll=false --collectCoverage --runInBand --no-cache --reporters=default --reporters=jest-junit",
    "test:loud": "TS_JEST_LOG=ts-jest.log npm run test -- --debug --detectLeaks --detectOpenHandles --errorOnDeprecated --showSeed --verbose",
    "cover": "npm run test -- --coverage --no-cache --coverageReporters=html",
    "coverage": "npm run test -- --all --watchAll=false --coverage --no-cache --coverageReporters=text --coverageReporters=html",
    "coverage:dark": "npm run coverage",
    "postcoverage:dark": "cp ./node_modules/nyc-dark/*.css ./coverage/",
    "dark": "./node_modules/nyc-dark/cp-cover.sh",
    "watch": "npm run test -- --watchAll=true --notify",
    "eslint": "npx eslint --cache --max-warnings 5 --report-unused-disable-directives .",
    "format": "npx prettier --cache --cache-location .prettiercache --ignore-path .eslintignore --write \"**/*.+(cjs|mjs|js|cts|mts|ts|json|json5)\"",
    "preall": "npm run format && npm run eslint && npm run check && npm run compile && npm run test && npm run test:loud && npm run cover && npm run coverage && npm run benchmark && npm run build",
    "all": "npm run app && npm run app2"
  },
  "author": "Brent S.A. Cowgill",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@tsconfig/node16": "^1.0.3",
    "@types/benchmark": "^2.1.2",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/modernizr": "^3.5.3",
    "@types/platform": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "benchmark": "^2.1.4",
    "canvas": "^2.11.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "feature.js": "^1.1.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-junit": "^15.0.0",
    "json5": "^2.2.3",
    "microtime": "^3.1.1",
    "modernizr": "^3.12.0",
    "node-notifier": "^10.0.1",
    "nyc-dark": "^3.0.3",
    "platform": "^1.3.6",
    "prettier": "^2.8.4",
    "timemachine": "^0.3.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
