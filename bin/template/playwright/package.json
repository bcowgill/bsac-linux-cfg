{
  "name": "playwright",
  "version": "1.0.0",
  "description": "Playwright integration testing tooling for Browser Applications",
  "main": "index.js",
  "keywords": [],
  "author": "Brent S.A. Cowgill",
  "license": "ISC",
  "engines": {
    "node": "^20.5.0"
  },
  "scripts": {
    "eslint": "eslint --cache --ext js tests/ tests-examples/",
    "eslint:context": "eslint --cache --ext js tests/ tests-examples/ --format codeframe",
    "eslint:fix": "eslint --cache --ext js tests/ tests-examples/ --fix",
    "prelint": "npm run eslint",
    "lint": "cross-env ./scripts/scan-playwright.sh",
    "format": "prettier --write tests*/**/*.js",
    "postformat": "npm run lint",
    "record": "npx playwright codegen --viewport-size=600,800",
    "record:api": "npx playwright open --viewport-size=600,800 --save-har=tests/bugs/har/bug.har --save-har-glob=\"**/channel-api/**\" -- http://localhost:58008",
    "record:test1": "npx playwright open --viewport-size=600,800 --save-har=tests/bugs/har/test1.har --save-har-glob=\"**/channel-api/**\" -- https://test1.test.group:58008",
    "example": "npx playwright test --project=GoogleChrome --grep @example",
    "devices": "npx playwright test --project=GoogleChrome --grep @devices",
    "quick": "npx playwright test --project=GoogleChrome --grep-invert @slow",
    "test": "npx playwright test --project=GoogleChrome --grep-invert \"@example|@iframe\"",
    "visual": "cross-env SLOMO=1 npm test -- --headed",
    "view": "npx playwright show-report",
    "prereport": "npm test",
    "report": "npm run view",
    "ui": "npm test -- --ui",
    "trace": "npm test -- --trace on",
    "posttrace": "npm run view",
    "viewtrace": "npx playwright show-trace",
    "debug": "npm test -- --debug",
    "debug:mobile": "npx playwright test --debug --project=MobileChrome --grep-invert \"@example|@iframe\"",
    "devtools": "cross-env PWDEBUG=console npm test",
    "update": "npm install -D @playwright/test@latest",
    "test:iframe": "npx playwright test --project=GoogleChrome --grep @iframe",
    "test:brand": "cross-env BRAND=brand npx playwright test --project=GoogleChrome --grep-invert \"@example|@iframe\"",
    "test:mobile": "npx playwright test --project=MobileChrome --grep-invert \"@example|@iframe\"",
    "test:edge": "npx playwright test --project=MicrosoftEdge --grep-invert \"@example|@iframe\"",
    "test:webkit": "npx playwright test --project=webkit --grep-invert \"@example|@iframe\"",
    "test:verbose": "cross-env DEBUG=pw:api npm test",
    "test:mockapi": "npm test -- --grep=@mockapi",
    "test:all": "npx playwright test --grep-invert \"@example|@iframe\"",
    "test:all:brand": "cross-env BRAND=brand npx playwright test --grep-invert \"@example|@iframe\"",
    "test:all:iframe": "npx playwright test --grep @iframe"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.28",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
