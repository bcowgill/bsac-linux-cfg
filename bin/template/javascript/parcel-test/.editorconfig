# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{editorconfig,js,jsx,json,json5,ts,tsx,py,scss,css,html,ex,exs,php,groovy}]
charset = utf-8

# 4 space indentation
[*.{py,groovy}]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[{Makefile,.editorconfig}]
indent_style = tab

# Tab indentation for javascript
[*.{js,jsx,ts,tsx}]
#indent_style = tab
#tab_width = 3
trim_trailing_whitespace = true

# Indentation override for all
[*.{sh,pl}]
indent_style = tab
tab_width = 3
trim_trailing_whitespace = true

# 2 space indentation, i.e. npm package.json, elixir, erlang
[*.{json,json5,ex,exs}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
