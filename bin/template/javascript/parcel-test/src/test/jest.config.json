{
  "setupFiles": [
    "<rootDir>/specs/jest-setup.js"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/specs/jest-setup-test-framework.js",
  "roots": [
    "src/",
    "specs/"
  ],
  "notify": true,
  "verbose": false,
  "collectCoverage": true,
  "coverageDirectory": "dashboard/unit-testing",
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "text-summary"
  ],
  "collectCoverageFrom": [
    "src/**/**",
    "specs/test-tools/**",
    "!**/index.js",
    "!**/app.mount.jsx",
    "!**/test.js",
    "!**/*.spec.js",
    "!**/*.spec.jsx"
  ],
  "coveragePathIgnorePatterns": [
    "/(style|stub)\\.js$",
    "/dist/",
    "/dist-release/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 25,
      "functions": 25,
      "lines": 25,
      "statements": 25
    }
  },
  "globals": {
    "webpack": {
      "title": "Application Accelerator Lloyds Brand Project",
      "brandName": "lloyds",
      "basePath": "/",
      "brandHome": "http://lloydsbank.com/personal.asp",
      "brandPrivacy": "http://www.lloydsbank.com/privacy.asp"
    }
  },
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
     "^assets(.*)$": "src/assets$1",
     "^components(.*)$": "src/components$1",
     "^journeys(.*)$": "src/journeys$1",
     "^resources(.*)$": "src/resources$1",
     "^sass(.*)$": "src/sass$1",
     "^utils(.*)$": "src/utils$1",
     "^core/src(.*)$": "<rootDir>/core-lib$1",
     "^brand/font(.*)$": "<rootDir>/specs/brand/brand-font-unit-tests",
     "^brand/colour(.*)$": "<rootDir>/specs/brand/brand-colour-unit-tests",
     "^brand/icon(.*)$": "<rootDir>/specs/brand/brand-icon-unit-tests",
     "^config/variables(.*)$": "<rootDir>/specs/brand/brand-variables-unit-tests",
     "^config/api-paths(.*)$": "<rootDir>/specs/brand/api-paths-unit-tests",
     "^specs(.*)$": "<rootDir>/specs$1"
  }
}
