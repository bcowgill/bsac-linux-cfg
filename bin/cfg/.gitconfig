[user]
	name = Brent S.A. Cowgill
	email = brent.cowgill@workshare.com
[push]
	default = simple
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = /usr/bin/diffmerge --nosplash \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = /usr/bin/diffmerge --nosplash --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[rerere]
	enabled = true
	autoupdate = true
[alias]
	graph = log --oneline --graph --decorate --all
[gui]
	fontdiff = -family ProFontWindows -size 18 -weight normal -slant roman -underline 0 -overstrike 0
