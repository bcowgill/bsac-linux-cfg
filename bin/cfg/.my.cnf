# http://www.developer.com/db/the-other-5-command-line-timesavers-for-mysql-tasks.html
# MySQL Command line help
# http://dev.mysql.com/doc/refman/5.5/en/mysql.html
# Tips: 
# use select * from table where id=3 \G   instead of ; to display a single column of results instead of a row
# use Ctrl-R to reverse search the history for a command http://cnswww.cns.cwru.edu/php/chet/readline/readline.html
# capture all session output to a file
# tee ./mysql-output.txt
# enable tab completion after choosing a database
# use database
# rehash
[mysql]
auto-rehash
# safe-updates prevent accidental update of whole table
# mysql>UPDATE users set User = 'wjgilmore'; -- missing a where clause!!
safe-updates
# use less as pager and don't clear screen when exit
# use nopager command to disable the pager
pager = "less --no-init"
# show current database in prompt
prompt = "[\\u@\\d]> "

