* { color: red }   /* red */
* { color: lime } /* lime */
* { color: hsl(120, 100%, 25%) } /* dark green */
* { color: hsl(120, 100%, 75%) } /* light green */
* { color: hsl(120, 75%, 75%) }  /* pastel green, and so on */

/* opacity conversion */
em { color: lime }     /* green */
em { color: lime } /* the same, with explicit opacity of 1 */

/* some special cases */
@darker-grey: #f4f5f6;
border-bottom: 4px solid transparent;
